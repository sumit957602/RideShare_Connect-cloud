@model IEnumerable<RideShare_Connect.Models.PaymentManagement.Commission>

@{
    ViewData["Title"] = "Platform Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

<nav class="navbar navbar-expand-lg navbar-dark sticky-top" style="background-color: #212529;">
    <div class="container">
        <a class="navbar-brand fs-4" asp-action="Admin" asp-controller="AdminDashboard">
            <i class="bi bi-car-front-fill me-2" style="color: var(--secondary-color);"></i>RideShare Connect
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-action="Admin" asp-controller="AdminDashboard">Admin Panel</a>
                </li>
            </ul>
            <div class="dropdown ms-lg-3">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="@ViewBag.AdminProfilePicUrl" alt="" width="32" height="32" class="rounded-circle me-2">
                    <strong>@ViewBag.AdminName</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" asp-controller="AdminAccount" asp-action="Settings">Settings</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="UserAccount" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="dropdown-item">Sign out</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<div class="container-fluid px-4 py-4" style="min-height: 80vh;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Platform Wallet Transactions</h1>
        <a asp-action="Admin" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-2"></i>Back to Dashboard</a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Commission ID</th>
                            <th class="py-3">Booking ID</th>
                            <th class="py-3">Ride Details</th>
                            <th class="py-3">Platform Fee</th>
                            <th class="py-3">Percentage</th>
                            <th class="py-3">Date</th>
                            <th class="pe-4 py-3">Status</th>
                            <th class="pe-4 py-3">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var commission in Model)
                            {
                                <tr>
                                    <td class="ps-4 font-monospace">COM-@commission.Id</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">@commission.BookingId</span>
                                    </td>
                                    <td>
                                        <div>
                                            <span class="fw-medium">@commission.Booking?.Ride?.Origin <i class="bi bi-arrow-right small text-muted mx-1"></i> @commission.Booking?.Ride?.Destination</span>
                                        </div>
                                        <div class="small text-muted">Driver: @(commission.Booking?.Ride?.Driver?.FullName ?? "Unknown")</div>
                                    </td>
                                    <td class="@(commission.PlatformFee < 0 ? "fw-bold text-danger" : "fw-bold text-success")">
                                        @(commission.PlatformFee < 0 ? "-" : "+")â‚¹@Math.Abs(commission.PlatformFee).ToString("N2")
                                    </td>
                                    <td>@commission.Percentage.ToString("0.##")%</td>
                                    <td>@(commission.Booking?.BookingTime.ToString("MMM dd, yyyy HH:mm") ?? "N/A")</td>
                                    <td class="pe-4">
                                        @if (commission.PlatformFee < 0)
                                        {
                                            <span class="badge bg-danger-subtle text-danger-emphasis rounded-pill border border-0">
                                                Deducted
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success-subtle text-success-emphasis rounded-pill border border-0">
                                                Credited
                                            </span>
                                        }
                                    </td>
                                    <td class="pe-4">
                                        <a asp-action="CommissionDetails" asp-route-id="@commission.Id" class="btn btn-sm btn-outline-primary">View</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="bi bi-wallet2 fs-1 d-block mb-2"></i>
                                    No commissions found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

