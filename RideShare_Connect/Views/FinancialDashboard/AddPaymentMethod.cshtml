@model RideShare_Connect.Models.PaymentManagement.PaymentMethod
@{
    ViewData["Title"] = "Add Payment Method";
}

<div class="container mt-5">
    <h2 class="mb-4">Add Payment Method</h2>
    <div class="modal-body p-0">
        <p class="text-muted small">Your payment information is securely handled by our PCI-compliant payment partner.</p>
        <form asp-action="AddPaymentMethod" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="CardType" class="form-label"></label>
                <select asp-for="CardType" class="form-select">
                    <option value="Credit Card">Credit Card</option>
                    <option value="Debit Card">Debit Card</option>
                </select>
                <span asp-validation-for="CardType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CardholderName" class="form-label"></label>
                <input asp-for="CardholderName" class="form-control" />
                <span asp-validation-for="CardholderName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CardNumber" class="form-label"></label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ExpiryDate" class="form-label"></label>
                    <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YYYY" />
                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CVV" class="form-label"></label>
                    <input asp-for="CVV" class="form-control" />
                    <span asp-validation-for="CVV" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save Method</button>
            <a asp-action="Finance" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
