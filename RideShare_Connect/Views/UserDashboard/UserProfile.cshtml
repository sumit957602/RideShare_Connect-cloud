@model RideShare_Connect.DTOs.UserProfileDto

@{
    ViewData["Title"] = "User Profile";
}

<head>
    <link rel="stylesheet" href="~/css/user.css" asp-append-version="true" />
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand fs-4" href="#">
                <i class="bi bi-car-front-fill me-2" style="color: var(--secondary-color);"></i>RideShare Connect
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="../Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../UserDashboard/User">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../FinancialDashboard/Finance">Payments & Finance</a>
                    </li>
                </ul>
                <div class="dropdown ms-lg-3">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="@Model.ProfilePicture" alt="Profile" width="32" height="32" class="rounded-circle me-2">
                        <strong>@Model.FullName</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="UserAccount" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="dropdown-item">Sign out</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column" id="sidebar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="../UserDashboard/User">
                                <i class="bi bi-speedometer2"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="UserProfile" asp-controller="UserDashboard">
                                <i class="bi bi-person-circle"></i>Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="PrivacySettings" asp-controller="UserDashboard">
                                <i class="bi bi-shield-lock"></i>Privacy Settings
                            </a>
                        </li>
                        <li class="nav-item mt-3">
                            <a class="nav-link text-danger" asp-action="DeleteAccount" asp-controller="UserDashboard">
                                <i class="bi bi-trash"></i> Delete My Account
                            </a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="UserAccount" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="nav-link btn btn-link p-0 w-100 text-start">
                                    <i class="bi bi-box-arrow-left"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
                    <h1 class="h2">My Profile</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                             <span class="text-muted align-self-center">Manage your personal information</span>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="card stat-card animate-fade-up border-0 shadow-lg">
                            <div class="card-body p-5">
                                <div class="text-center mb-5">
                                    <div class="profile-img-container">
                                        <img src="@Model.ProfilePicture" alt="@Model.FullName" onerror="this.src='/images/default-avatar.png'">
                                    </div>
                                    <h3 class="fw-bold text-dark">@Model.FullName</h3>
                                    <p class="text-muted">Rider</p>
                                </div>

                                <form asp-action="UserProfile" method="post">
                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                    
                                    <div class="row g-4">
                                        <div class="col-md-6 form-group-label-left">
                                            <label asp-for="FullName" class="form-label">Full Name</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                                                <input asp-for="FullName" class="form-control" placeholder="Your Name" required />
                                            </div>
                                            <span asp-validation-for="FullName" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="col-md-6 form-group-label-left">
                                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i class="bi bi-telephone"></i></span>
                                                <input asp-for="PhoneNumber" class="form-control" placeholder="+91..." />
                                            </div>
                                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                        </div>

                                        <div class="col-12 form-group-label-left">
                                            <label asp-for="ProfilePicture" class="form-label">Profile Picture URL</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i class="bi bi-link-45deg"></i></span>
                                                <input asp-for="ProfilePicture" class="form-control" placeholder="https://example.com/my-photo.jpg" />
                                            </div>
                                            <div class="form-text">Paste a direct link to an image to update your avatar.</div>
                                            <span asp-validation-for="ProfilePicture" class="text-danger small"></span>
                                        </div>

                                        <div class="col-12 form-group-label-left">
                                            <label asp-for="EmergencyContact" class="form-label">Emergency Contact</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i class="bi bi-people"></i></span>
                                                <input asp-for="EmergencyContact" class="form-control" placeholder="Name and Phone of emergency contact" />
                                            </div>
                                            <span asp-validation-for="EmergencyContact" class="text-danger small"></span>
                                        </div>

                                        <div class="col-12 form-group-label-left">
                                            <label asp-for="Bio" class="form-label">Bio</label>
                                            <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Tell us a bit about yourself..."></textarea>
                                            <span asp-validation-for="Bio" class="text-danger small"></span>
                                        </div>

                                        <div class="col-12 text-end mt-4">
                                            <button type="submit" class="btn btn-primary px-5 py-2 fw-bold rounded-pill shadow-sm">
                                                <i class="bi bi-check-lg me-2"></i>Save Changes
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarNav = document.getElementById('sidebar-nav');
            const navLinks = sidebarNav.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                link.addEventListener('click', function (event) {
                    navLinks.forEach(l => l.classList.remove('active'));
                    event.currentTarget.classList.add('active');
                });
            });
        });
    </script>
</body>
</html>