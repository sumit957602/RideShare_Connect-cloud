        <div class="container">
            <a class="navbar-brand fs-4" href="index.html">
                <i class="bi bi-car-front-fill me-2" style="color: var(--secondary-color);"></i>RideShare Connect
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="dashboard">My Rides</a>
                    </li>
                    <li class="nav-item">
                         <a class="nav-link" asp-controller="DriverDashboard" asp-action="Driver">Driver Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="DriverDashboard" asp-action="CreateRide">Offer a Ride</a>
                    </li>
                </ul>
                <div class="dropdown ms-lg-3">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="" alt="Driver Profile Picture" width="32" height="32" class="rounded-circle me-2">
                        <strong>Sumit Kumar</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end text-small shadow" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1 py-5">
        <div class="container">
            <div class="card">
                <div class="form-card-header text-center">
                    <h2 class="mb-0">Edit Ride</h2>
                    <p class="mb-0">Update the details below and see your route on the map.</p>
                </div>
                <div class="card-body p-4 p-md-5">
                    <div class="row g-5">
                        <!-- Form Fields -->
                        <div class="col-lg-6">
                            <form asp-action="EditRide" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="Id" />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <label asp-for="Origin" class="form-label"></label>
                                        <input asp-for="Origin" class="form-control" id="originInput" placeholder="Starting point" />
                                        <span asp-validation-for="Origin" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Destination" class="form-label"></label>
                                        <input asp-for="Destination" class="form-control" id="destinationInput" placeholder="Ending point" />
                                        <span asp-validation-for="Destination" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <label asp-for="DistanceKm" class="form-label">Distance (km)</label>
                                        <input asp-for="DistanceKm" class="form-control" id="distanceInput" placeholder="e.g., 10" />
                                        <span asp-validation-for="DistanceKm" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label" for="modalWaypoints">Waypoints (Optional)</label>
                                        <input type="text" class="form-control" id="modalWaypoints" placeholder="e.g., Gandhi Maidan, Eco Park">
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="DepartureDate" class="form-label"></label>
                                        <input asp-for="DepartureDate" class="form-control" id="modalDate" />
                                        <span asp-validation-for="DepartureDate" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="DepartureTime" class="form-label"></label>
                                        <input asp-for="DepartureTime" class="form-control" id="modalTime" />
                                        <span asp-validation-for="DepartureTime" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Seats" class="form-label">Available Seats</label>
                                        <input asp-for="Seats" class="form-control" id="modalSeats" min="1" max="6" placeholder="e.g., 3" />
                                        <span asp-validation-for="Seats" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="PricePerSeat" class="form-label"></label>
                                        <input asp-for="PricePerSeat" class="form-control" id="modalPrice" placeholder="e.g., 100" />
                                        <span asp-validation-for="PricePerSeat" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="VehicleId" class="form-label"></label>
                                        <select asp-for="VehicleId" class="form-select" asp-items="@(new SelectList(Model.Vehicles, "Id", "LicensePlate"))">
                                            <option value="">Choose...</option>
                                        </select>
                                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-check">
                                            <input asp-for="IsRecurring" class="form-check-input" id="isRecurring" />
                                            <label class="form-check-label" for="isRecurring">This is a recurring ride</label>
                                        </div>
                                    </div>
                                    <div class="col-12 text-end mt-5">
                                        <a asp-action="Driver" class="btn btn-secondary me-2">Cancel</a>
                                        <button type="submit" class="btn btn-primary">Update Ride</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-6">
                            <div id="map"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer from Main Site -->
    <footer class="footer">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4"><h5><i class="bi bi-car-front-fill me-2" style="color: var(--secondary-color);"></i>RideShare Connect</h5><p>Your trusted platform for safe, comfortable, and affordable shared rides.</p></div>
                <div class="col-lg-2 col-md-4 col-6"><h5>Quick Links</h5><ul class="list-unstyled"><li class="mb-2"><a href="#">About Us</a></li><li class="mb-2"><a href="#">Contact</a></li></ul></div>
                <div class="col-lg-3 col-md-4 col-6"><h5>Legal</h5><ul class="list-unstyled"><li class="mb-2"><a href="#">Privacy Policy</a></li><li class="mb-2"><a href="#">Terms of Service</a></li></ul></div>
                <div class="col-lg-3 col-md-4"><h5>Contact Us</h5><ul class="list-unstyled"><li class="mb-2"><i class="bi bi-geo-alt-fill me-2"></i> 123 Connect Ave, Patna</li><li class="mb-2"><i class="bi bi-envelope-fill me-2"></i> contact@rideshareconnect.com</li></ul></div>
            </div>
            <hr class="my-4" style="border-color: rgba(255,255,255,0.2);"><div class="text-center"><p>&copy; 2025 RideShare Connect. All Rights Reserved.</p></div>
        </div>
    </footer>

    <!-- Leaflet JS for Map -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Map Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // 1. Initialize the map and set its view to a default location (Patna, Bihar)
            const map = L.map('map').setView([25.5941, 85.1376], 13);

            // 2. Add a tile layer to the map (OpenStreetMap)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            let originMarker = null;
            let destinationMarker = null;
            let routeLine = null;

            const originInput = document.getElementById('originInput');
            const destinationInput = document.getElementById('destinationInput');
            const distanceInput = document.getElementById('distanceInput');

            // Helper: Geocode an address using the Nominatim API
            async function geocode(query) {
                if (!query) return null;
                const url = `https://nominatim.openstreetmap.org/search?format=json&limit=1&q=${encodeURIComponent(query)}`;
                try {
                    const response = await fetch(url);
                    const results = await response.json();
                    if (results.length > 0) {
                        const lat = parseFloat(results[0].lat);
                        const lon = parseFloat(results[0].lon);
                        return [lat, lon];
                    }
                } catch (err) {
                    console.error('Geocoding error:', err);
                }
                return null;
            }

            // Helper: Fetch route from OSRM and draw it on the map
            async function drawRoute(originCoords, destCoords) {
                const url = `https://router.project-osrm.org/route/v1/driving/${originCoords[1]},${originCoords[0]};${destCoords[1]},${destCoords[0]}?overview=full&geometries=geojson`;
                const response = await fetch(url);
                const data = await response.json();
                if (data.routes && data.routes.length > 0) {
                    const route = data.routes[0];
                    const coords = route.geometry.coordinates.map(c => [c[1], c[0]]);
                    routeLine = L.polyline(coords, { color: 'var(--primary-color)' }).addTo(map);
                    map.fitBounds(routeLine.getBounds().pad(0.1));
                    if (distanceInput) {
                        distanceInput.value = (route.distance / 1000).toFixed(2);
                    }
                }
            }

            // Function to update map markers and route using real APIs
            async function updateMap() {
                const originValue = originInput.value.trim();
                const destValue = destinationInput.value.trim();

                // Clear existing markers and line
                if (originMarker) { map.removeLayer(originMarker); originMarker = null; }
                if (destinationMarker) { map.removeLayer(destinationMarker); destinationMarker = null; }
                if (routeLine) { map.removeLayer(routeLine); routeLine = null; }

                const originCoords = await geocode(originValue);
                const destCoords = await geocode(destValue);

                let points = [];

                if (originCoords) {
                    originMarker = L.marker(originCoords).addTo(map).bindPopup(`<b>Origin:</b> ${originValue}`).openPopup();
                    points.push(originCoords);
                }

                if (destCoords) {
                    destinationMarker = L.marker(destCoords).addTo(map).bindPopup(`<b>Destination:</b> ${destValue}`).openPopup();
                    points.push(destCoords);
                }

                if (originCoords && destCoords) {
                    await drawRoute(originCoords, destCoords);
                } else if (points.length === 1) {
                    map.setView(points[0], 13);
                }
            }

            // 4. Add event listeners to input fields
            originInput.addEventListener('change', updateMap);
            destinationInput.addEventListener('change', updateMap);
        });
    </script>

</body>
</html>
