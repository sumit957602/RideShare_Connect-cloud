            <!-- User Management -->
            <div class="col-lg-4 col-md-6 animate-fade-up delay-100">
                <div class="feature-card text-center">
                    <h3><i class="bi bi-people-fill me-2"></i>User Management</h3>
                    <ul class="my-4">
                        <li><i class="bi bi-check-circle-fill"></i> Multi-step Verification</li>
