@{
    ViewData["Title"] = "About";
}

<head>
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
</head>

<body>
<h1>@ViewData["Title"]</h1>

<div class="about-container">
    <section class="about-hero">
        <p>
            RideShare is dedicated to transforming urban mobility. With a focus on safety, efficiency, and customer satisfaction, we connect thousands of riders and drivers every day. Our commitment: <b>Your journey, your way.</b>
        </p>
    </section>

    <section class="about-mission">
        <h2>Our Mission</h2>
        <p>
            To make transportation accessible, affordable, and sustainable. We harness technology to empower communities and reduce urban congestion.
        </p>
    </section>

    <section class="about-stats">
        <div class="about-stat">
            <h3>20+</h3>
            <span>Rides Completed</span>
        </div>
        <div class="about-stat">
            <h3>10+</h3>
            <span>Registered Drivers</span>
        </div>
        <div class="about-stat">
            <h3>99.5%</h3>
            <span>Customer Satisfaction</span>
        </div>
    </section>

    <section class="about-values">
        <h2>Our Core Values</h2>
        <ul>
            <li><b>Safety First</b>: Stringent driver vetting and real-time ride tracking.</li>
            <li><b>Customer Centricity</b>: Support available 24/7, prompt response, and user-focused features.</li>
            <li><b>Innovation</b>: Regularly introducing new features to improve the ride experience.</li>
            <li><b>Sustainability</b>: Commitment to eco-friendly fleet and carbon reduction.</li>
        </ul>
    </section>

    <section class="about-contact">
        <h2>Contact Us</h2>
        <p>Email: <a href="mailto:support@rideshare_Connect.com">support@rideshare.com</a></p>
        <p>Phone: +91 987654321</p>
    </section>
</div>
</body>