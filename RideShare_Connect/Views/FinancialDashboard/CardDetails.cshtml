@model RideShare_Connect.Models.PaymentManagement.PaymentMethod
@{
    ViewData["Title"] = "Card Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - RideShare Connect</title>
    
    <!-- CSS Links -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/finance.css" asp-append-version="true" />
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand fs-4" href="#">
                <i class="bi bi-car-front-fill me-2" style="color: var(--secondary-color);"></i>RideShare Connect
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto">
                     <li class="nav-item">
                        <a class="nav-link" asp-controller="UserDashboard" asp-action="User">Dashboard</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link active" asp-controller="FinancialDashboard" asp-action="Finance">Payments & Finance</a>
                    </li>
                </ul>
                <div class="dropdown ms-lg-3">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="@Model.User?.UserProfile?.ProfilePicture" alt="Profile" width="32" height="32" class="rounded-circle me-2">
                        <strong>@Model.User?.UserProfile?.FullName</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end text-small shadow" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                             <form asp-controller="UserAccount" asp-action="Logout" method="post" class="d-inline">
                                 <button type="submit" class="dropdown-item">Sign out</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1 py-5">
        <div class="container">
            <div class="row g-4">
                <!-- Left Sidebar Navigation -->
                <div class="col-lg-3">
                    <div class="card h-100 sidebar-card sticky-top" style="top: 100px; z-index: 1;">
                        <div class="card-body p-4">
                            <h6 class="text-uppercase text-muted fw-bold mb-4 small ls-1">Financial Menu</h6>
                            <div class="nav flex-column nav-pills">
                                <a href="@Url.Action("Finance", "FinancialDashboard")" class="nav-link text-start"><i class="bi bi-pie-chart-fill me-3"></i>Overview</a>
                                <a href="@Url.Action("Finance", "FinancialDashboard")" class="nav-link active text-start"><i class="bi bi-credit-card-2-front-fill me-3"></i>Cards & Methods</a>
                                <a href="@Url.Action("Finance", "FinancialDashboard")" class="nav-link text-start"><i class="bi bi-clock-history me-3"></i>Transactions</a>
                                <a href="@Url.Action("Finance", "FinancialDashboard")" class="nav-link text-start"><i class="bi bi-arrow-counterclockwise me-3"></i>Refunds</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Content Area -->
                <div class="col-lg-9">
                    <div class="card border-0 shadow-sm" style="overflow: visible;">
                        <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0">
                             <div class="d-flex justify-content-between align-items-center">
                                <h4 class="mb-0 fw-bold"><i class="bi bi-credit-card-2-front me-2 text-primary"></i>Card Details</h4>
                                <a asp-action="Finance" class="btn btn-sm btn-outline-secondary rounded-pill px-3"><i class="bi bi-x-lg"></i></a>
                             </div>
                        </div>
                        <div class="card-body p-4">
                            @{
                                var brandClass = Model.CardBrand?.ToLower().Contains("visa") == true ? "visa" : "mastercard";
                            }
                            <div class="row justify-content-center mb-5">
                                <div class="col-md-8 col-lg-6">
                                    <!-- Visual Card Representation -->
                                    <div class="payment-method-card @brandClass mb-0" style="height: 220px; cursor: default; transform: none;">
                                        <div class="d-flex justify-content-between">
                                            <div class="chip"></div>
                                            <i class="bi bi-wifi fs-4 opacity-75"></i>
                                        </div>
                                        <div class="card-number fs-4 mt-3">
                                            **** **** **** @Model.CardLast4Digit
                                        </div>
                                        <div class="d-flex justify-content-between align-items-end mt-4">
                                            <div>
                                                <div class="small opacity-75" style="font-size: 0.7rem;">CARD HOLDER</div>
                                                <div class="card-holder fs-6">@(string.IsNullOrEmpty(Model.CardholderName) ? "VALUED MEMBER" : Model.CardholderName)</div>
                                            </div>
                                            <div class="text-end">
                                                 <div class="small opacity-75" style="font-size: 0.7rem;">EXPIRES</div>
                                                 <div class="card-holder fs-6">@Model.ExpiryDate</div>
                                            </div>
                                            <div class="card-brand align-self-end ms-3">
                                                @if(brandClass == "visa") { <i class="bi bi-credit-card-2-front fs-2"></i> }
                                                else if(brandClass == "mastercard") { <i class="bi bi-credit-card-2-back fs-2"></i> }
                                                else { @Model.CardType }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <hr class="border-light mb-4">

                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded-3">
                                        <small class="text-uppercase text-muted fw-bold small ls-1">Card Type</small>
                                        <p class="mb-0 fw-medium">@Model.CardType</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded-3">
                                        <small class="text-uppercase text-muted fw-bold small ls-1">Card Brand</small>
                                        <p class="mb-0 fw-medium">@Model.CardBrand</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded-3">
                                         <small class="text-uppercase text-muted fw-bold small ls-1">Status</small>
                                         <p class="mb-0 text-success fw-medium"><i class="bi bi-check-circle-fill me-1"></i> Active & Verified</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded-3">
                                        <small class="text-uppercase text-muted fw-bold small ls-1">Created On</small>
                                        <p class="mb-0 fw-medium">@(DateTime.Now.ToString("MMM dd, yyyy"))</p> <!-- Placeholder date as creation date not in model -->
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-3 mt-5">
                                <a asp-action="EditPaymentMethod" asp-route-id="@Model.Id" class="btn btn-outline-primary rounded-pill px-4">
                                    <i class="bi bi-pencil-square me-2"></i>Edit
                                </a>
                                <form asp-action="DeletePaymentMethod" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this payment method?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm">
                                        <i class="bi bi-trash me-2"></i>Remove Card
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer Removed -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
