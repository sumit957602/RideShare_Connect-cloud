                    </ul>
                </div>
            </div>
            <!-- Payment System -->
            <div class="col-lg-4 col-md-6 animate-fade-up delay-300">
                <div class="feature-card text-center">
                    <h3><i class="bi bi-wallet2 me-2"></i>Secure Payments</h3>
                    <ul class="my-4">
                        <li><i class="bi bi-check-circle-fill"></i> Multiple Payment Methods</li>
                        <li><i class="bi bi-check-circle-fill"></i> PCI Compliant Processing</li>
                        <li><i class="bi bi-check-circle-fill"></i> Integrated Wallet System</li>
                        <li><i class="bi bi-check-circle-fill"></i> Automated Commission & Refunds</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

