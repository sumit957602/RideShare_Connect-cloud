
@model RideShare_Connect.ViewModels.UserDashboardViewModel
@using System.Linq
@using RideShare_Connect.Models.RideManagement


@{
    ViewData["Title"] = "User Dashboard";
}

<head>
    <link rel="stylesheet" href="~/css/user.css" asp-append-version="true" />
    <script src="~/js/user.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <!-- Header & Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand fs-4" href="#">
                <i class="bi bi-car-front-fill me-2" style="color: var(--secondary-color);"></i>RideShare Connect
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link active" href="#">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../../FinancialDashboard/Finance">Payments & Finance</a>
                    </li>
                </ul>
                <div class="dropdown ms-lg-3">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="@Model.Profile?.ProfilePicture" alt="Profile" width="32" height="32" class="rounded-circle me-2">
                        <strong>@Model.Profile?.FullName</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="../UserDashboard/UserProfile">Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="UserAccount" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="dropdown-item">Sign out</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column" id="sidebar-nav" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" data-bs-toggle="tab" data-bs-target="#dashboard-tab-pane" role="tab" aria-controls="dashboard-tab-pane" aria-selected="true">
                                <i class="bi bi-speedometer2"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" data-bs-toggle="tab" data-bs-target="#find-ride-tab-pane" role="tab" aria-controls="find-ride-tab-pane" aria-selected="false">
                                <i class="bi bi-search"></i>Find a Ride
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" data-bs-toggle="tab" data-bs-target="#active-rides-tab-pane" role="tab" aria-controls="active-rides-tab-pane" aria-selected="false">
                                <i class="bi bi-play-circle"></i>Active Ride
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" data-bs-toggle="tab" data-bs-target="#cancelled-rides-tab-pane" role="tab" aria-controls="cancelled-rides-tab-pane" aria-selected="false">
                                <i class="bi bi-x-circle"></i>Cancel Ride
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" data-bs-toggle="tab" data-bs-target="#completed-rides-tab-pane" role="tab" aria-controls="completed-rides-tab-pane" aria-selected="false">
                                <i class="bi bi-check-circle"></i>Completed Ride
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" data-bs-toggle="tab" data-bs-target="#bookings-tab-pane" role="tab" aria-controls="bookings-tab-pane" aria-selected="false">
                                <i class="bi bi-bookmark-check-fill"></i>Total Bookings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="../UserDashboard/UserProfile">
                                <i class="bi bi-person-circle"></i>Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="UserAccount" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="nav-link btn btn-link p-0">
                                    <i class="bi bi-box-arrow-left"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 main-content">
                <div class="tab-content" id="myTabContent">
                    <!-- Dashboard Tab -->
                    <div class="tab-pane fade show active" id="dashboard-tab-pane" role="tabpanel" tabindex="0">
                        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                            <h1 class="h2">Dashboard</h1>
                        </div>
                        <div class="row g-4 mb-4">
                            <div class="col-md-3">
                                <div class="stat-card d-flex align-items-center">
                                    <div class="icon bg-primary-subtle text-primary me-3">
                                        <i class="bi bi-bookmark-check-fill"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">@Model.RidesBooked</h5>
                                        <p class="text-muted mb-0">Rides Booked</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="stat-card d-flex align-items-center">
                                    <div class="icon bg-info-subtle text-info me-3">
                                        <i class="bi bi-wallet2"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">₹@Model.WalletBalance</h5>
                                        <p class="text-muted mb-0">Wallet Balance</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="stat-card d-flex align-items-center">
                                    <div class="icon bg-secondary-subtle text-secondary me-3">
                                        <i class="bi bi-bookmark-check-fill"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">@Model.TotalBookingsCount</h5>
                                        <p class="text-muted mb-0">Total Bookings</p>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-3">
                                <div class="stat-card d-flex align-items-center">
                                    <div class="icon bg-warning-subtle text-warning me-3">
                                        <i class="bi bi-star-fill"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">@Model.Rating.ToString("0.0")</h5>
                                        <p class="text-muted mb-0">Your Rating</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row g-4 mb-4">
                            <div class="col-md-3">
                                <div class="stat-card d-flex align-items-center">
                                    <div class="icon bg-primary-subtle text-primary me-3">
                                        <i class="bi bi-play-circle"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">@Model.ActiveRidesCount</h5>
                                        <p class="text-muted mb-0">Active Rides</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="stat-card d-flex align-items-center">
                                    <div class="icon bg-danger-subtle text-danger me-3">
                                        <i class="bi bi-x-circle"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">@Model.CancelledRidesCount</h5>
                                        <p class="text-muted mb-0">Cancelled Rides</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="stat-card d-flex align-items-center">
                                    <div class="icon bg-success-subtle text-success me-3">
                                        <i class="bi bi-check-circle"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">@Model.CompletedRidesCount</h5>
                                        <p class="text-muted mb-0">Completed Rides</p>
                                    </div>
                                </div>
                            </div>




                        </div>
                        <h4>Recent Activity</h4>
                        <div class="card">
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    @foreach (var booking in Model.RecentBookings)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            You booked a ride to @booking.Ride.Destination with @booking.Ride.Driver.FullName.
                                            <span class="text-muted small">@booking.BookingTime.ToString("g")</span>
                                        </li>
                                    }
                                    @if (!Model.RecentBookings.Any())
                                    {
                                        <li class="list-group-item text-center text-muted">No recent activity</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Find a Ride Tab -->
                    <div class="tab-pane fade" id="find-ride-tab-pane" role="tabpanel" tabindex="0">
                        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                            <h1 class="h2">Find Available Rides</h1>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <form id="rideSearchForm" class="row g-3">
                                    <div class="col-md-3">
                                        <label for="fromLocation" class="form-label">From</label>
                                        <input type="text" class="form-control" id="fromLocation" placeholder="e.g., Patna Junction">
                                    </div>
                                    <div class="col-md-3">
                                        <label for="toLocation" class="form-label">To</label>
                                        <input type="text" class="form-control" id="toLocation" placeholder="e.g., Airport">
                                    </div>
                                    <div class="col-md-2">
                                        <label for="radius" class="form-label">Radius (km)</label>
                                        <input type="number" class="form-control" id="radius" min="1" placeholder="5">
                                    </div>
                                    <div class="col-md-2">
                                        <label for="rideDate" class="form-label">Date</label>
                                        <input type="date" class="form-control" id="rideDate">
                                    </div>
                                    <div class="col-md-2">
                                        <label for="rideTime" class="form-label">Time</label>
                                        <input type="time" class="form-control" id="rideTime">
                                    </div>
                                    <div class="col-md-2">
                                        <label for="priceMin" class="form-label">Min Price (₹)</label>
                                        <input type="number" class="form-control" id="priceMin" min="0">
                                    </div>
                                    <div class="col-md-2">
                                        <label for="priceMax" class="form-label">Max Price (₹)</label>
                                        <input type="number" class="form-control" id="priceMax" min="0">
                                    </div>
                                    <div class="col-md-2">
                                        <label for="rideSeats" class="form-label">Seats</label>
                                        <input type="number" class="form-control" id="rideSeats" placeholder="1" min="1">
                                    </div>
                                    <div class="col-md-2">
                                        <label for="vehicleType" class="form-label">Vehicle</label>
                                        <select id="vehicleType" class="form-select">
                                            <option value="">Any</option>
                                            <option value="Sedan">Sedan</option>
                                            <option value="SUV">SUV</option>
                                            <option value="Hatchback">Hatchback</option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label for="sortOption" class="form-label">Sort By</label>
                                        <select id="sortOption" class="form-select">
                                            <option value="price">Price</option>
                                            <option value="time">Departure Time</option>
                                            <option value="rating">Rating</option>
                                            <option value="distance">Distance</option>
                                        </select>
                                    </div>
                                    <div class="col-md-2 align-self-end">
                                        <button type="submit" class="btn btn-primary w-100">Search</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="mt-4" id="searchResults">
                            <h5>Search Results</h5>
                            <div id="rideResults">
                                @foreach (var ride in Model.AvailableRides)
                                {
                                    <div class="ride-card card mb-3" data-origin="@ride.Origin" data-destination="@ride.Destination" data-price="@ride.PricePerSeat" data-time="@ride.DepartureTime:HH:mm" data-rating="0" data-distance="@ride.DistanceKm" data-seats="@ride.AvailableSeats" data-vehicle="@ride.Vehicle?.VehicleType" data-date="@ride.DepartureTime:yyyy-MM-dd">
                                        <div class="card-body">
                                            <div class="row align-items-center">
                                                <div class="col-md-5">
                                                    <div class="d-flex align-items-center">
                                                        <i class="bi bi-geo-alt-fill text-success fs-4 me-2"></i>
                                                        <div>
                                                            <strong>@ride.Origin <i class="bi bi-arrow-right mx-1"></i> @ride.Destination</strong>
                                                            <div class="text-muted small">@ride.DepartureTime.ToString("g")</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="driver-info d-flex align-items-center">
                                                        <div>
                                                            <strong>@ride.Driver.FullName</strong>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-2 text-center">
                                                    <h4 class="mb-0 text-primary">
                                                        @((ride.PricePerSeat).ToString("C"))


                                                    </h4>
                                                    <span class="badge bg-success-subtle text-success-emphasis rounded-pill">@ride.AvailableSeats Seats Left</span>
                                                </div>
                                                <div class="col-md-2 text-end">
                                                    <a asp-action="RideDetails" asp-route-id="@ride.Id" class="btn btn-outline-primary me-2">View</a>
                                                    <a asp-action="BookRide" asp-route-id="@ride.Id" class="btn btn-primary">Book Ride</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (!Model.AvailableRides.Any())
                                {
                                    <div class="text-muted">No rides available</div>
                                }
                                <div id="noResultsMessage" class="text-muted" style="display:none;">No rides found</div>
                            </div>
                        </div>
                    </div>

                    <!-- Active Rides Tab -->
                    <div class="tab-pane fade" id="active-rides-tab-pane" role="tabpanel" tabindex="0">
                        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                            <h1 class="h2">Active Rides</h1>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Route</th>
                                                <th>Vehicle No</th>
                                                <th>Date & Time</th>
                                                <th>Seats</th>
                                                <th>Total Fare</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var booking in Model.Bookings.Where(b => b.Status == "Ongoing"))
                                            {
                                                <tr>
                                                    <td><strong>@booking.PickupLocation <i class="bi bi-arrow-right"></i> @booking.DropLocation</strong></td>
                                                    <td>@booking.Ride.Vehicle.LicensePlate</td>
                                                    <td>@booking.Ride.DepartureTime.ToString("dd MMM yyyy, hh:mm tt")</td>
                                                    <td>@booking.BookedSeats</td>
                                                    <td>@((booking.BookedSeats * booking.Ride.PricePerSeat * booking.DistanceKm).ToString("C"))</td>
                                                    <td>@booking.Status</td>
                                                </tr>
                                            }
                                            @if (!Model.Bookings.Any(b => b.Status == "Ongoing"))
                                            {
                                                <tr>
                                                    <td colspan="6" class="text-center text-muted">No active rides</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Cancelled Rides Tab -->
                    <div class="tab-pane fade" id="cancelled-rides-tab-pane" role="tabpanel" tabindex="0">
                        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                            <h1 class="h2">Cancelled Rides</h1>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Route</th>
                                                <th>Vehicle No</th>
                                                <th>Date & Time</th>
                                                <th>Seats</th>
                                                <th>Total Fare</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var booking in Model.Bookings.Where(b => b.Status == "Cancelled"))
                                            {
                                                <tr>
                                                    <td><strong>@booking.PickupLocation <i class="bi bi-arrow-right"></i> @booking.DropLocation</strong></td>
                                                    <td>@booking.Ride.Vehicle.LicensePlate</td>
                                                    <td>@booking.Ride.DepartureTime.ToString("dd MMM yyyy, hh:mm tt")</td>
                                                    <td>@booking.BookedSeats</td>
                                                    <td>@((booking.BookedSeats * booking.Ride.PricePerSeat * booking.DistanceKm).ToString("C"))</td>
                                                    <td>@booking.Status</td>
                                                </tr>
                                            }
                                            @if (!Model.Bookings.Any(b => b.Status == "Cancelled"))
                                            {
                                                <tr>
                                                    <td colspan="6" class="text-center text-muted">No cancelled rides</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Completed Rides Tab -->
                    <div class="tab-pane fade" id="completed-rides-tab-pane" role="tabpanel" tabindex="0">
                        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                            <h1 class="h2">Completed Rides</h1>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Route</th>
                                                <th>Vehicle No</th>
                                                <th>Date & Time</th>
                                                <th>Seats</th>
                                                <th>Total Fare</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var booking in Model.Bookings.Where(b => b.Status == "Completed"))
                                            {
                                                <tr>
                                                    <td><strong>@booking.PickupLocation <i class="bi bi-arrow-right"></i> @booking.DropLocation</strong></td>
                                                    <td>@booking.Ride.Vehicle.LicensePlate</td>
                                                    <td>@booking.Ride.DepartureTime.ToString("dd MMM yyyy, hh:mm tt")</td>
                                                    <td>@booking.BookedSeats</td>
                                                    <td>@((booking.BookedSeats * booking.Ride.PricePerSeat * booking.DistanceKm).ToString("C"))</td>
                                                    <td>@booking.Status</td>
                                                    <td>
                                                        <a asp-controller="Review"
                                                           asp-action="Review"
                                                           asp-route-rideId="@booking.Ride.Id"
                                                           asp-route-driverId="@booking.Ride.DriverId"
                                                           class="btn btn-sm btn-outline-primary">
                                                            Give a review
                                                        </a>

                                                    </td>
                                                </tr>
                                            }
                                            @if (!Model.Bookings.Any(b => b.Status == "Completed"))
                                            {
                                                <tr>
                                                    <td colspan="6" class="text-center text-muted">No completed rides</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- My Bookings Tab -->
                    <div class="tab-pane fade" id="bookings-tab-pane" role="tabpanel" tabindex="0">
                        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                            <h1 class="h2">My Bookings</h1>
                        </div>

                        @{
        var scheduled = (Model.Bookings ?? Enumerable.Empty<RideBooking>())
        .Where(b => string.Equals(b.Status, "Pending", StringComparison.OrdinalIgnoreCase))
        .OrderByDescending(b => b.BookingTime)
        .ToList();

        var completed = (Model.Bookings ?? Enumerable.Empty<RideBooking>())
        .Where(b => string.Equals(b.Status, "Completed", StringComparison.OrdinalIgnoreCase))
        .OrderByDescending(b => b.BookingTime)
        .ToList();
                        }


                        <!-- Scheduled Rides -->
                        <h5 class="mb-3">Scheduled</h5>
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Pickup - Drop</th>
                                                <th>Vehicle No</th>
                                                <th>Date & Time</th>
                                                <th>Total Fare</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (scheduled.Any())
                        {
                                            @foreach (var booking in scheduled)
                            {
                                            <tr>
                                                <td>
                                                    <strong>
                                                        @booking.PickupLocation <i class="bi bi-arrow-right"></i> @booking.DropLocation
                                                    </strong>
                                                </td>
                                                <td>@booking.Ride.Vehicle.LicensePlate</td>
                                                <td>@booking.Ride.DepartureTime.ToString("dd MMM yyyy, hh:mm tt")</td>
                                                        <td>
                                                            @((booking.BookedSeats * booking.Ride.PricePerSeat * booking.Ride.DistanceKm).ToString("C"))</td>
                                                <td>@booking.Status</td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-danger">Cancel</button>
                                                </td>
                                            </tr>
                            }
                        }
                        else
                        {
                                            <tr>
                                                <td colspan="6" class="text-center text-muted">No scheduled bookings found</td>
                                            </tr>
                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Completed Rides -->
                        <h5 class="mb-3">Completed</h5>
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Pickup - Drop</th>
                                                <th>Vehicle No</th>
                                                <th>Date & Time</th>
                                                <th>Total Fare</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (completed.Any())
                        {
                                            @foreach (var booking in completed)
                            {
                                            <tr>
                                                <td>
                                                    <strong>
                                                        @booking.PickupLocation <i class="bi bi-arrow-right"></i> @booking.DropLocation
                                                    </strong>
                                                </td>
                                                <td>@booking.Ride.Vehicle.LicensePlate</td>
                                                <td>@booking.Ride.DepartureTime.ToString("dd MMM yyyy, hh:mm tt")</td>
                                                        <td>
                                                            @((booking.Ride.PricePerSeat * booking.Ride.DistanceKm).ToString("C"))</td>
                                                <td>@booking.Status</td>
                                                <td>
                                                    <a asp-controller="Review"
                                                       asp-action="Review"
                                                       asp-route-rideId="@booking.Ride.Id"
                                                       asp-route-driverId="@booking.Ride.DriverId"
                                                       class="btn btn-sm btn-outline-primary">
                                                        Give a review
                                                    </a>

                                                </td>
                                            </tr>
                            }
                        }
                        else
                        {
                                            <tr>
                                                <td colspan="6" class="text-center text-muted">No completed bookings found</td>
                                            </tr>
                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </main>
        </div>
    </div>

</body>
</html>

