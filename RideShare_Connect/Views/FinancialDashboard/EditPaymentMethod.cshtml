@model RideShare_Connect.Models.PaymentManagement.PaymentMethod
@{
    ViewData["Title"] = "Edit Payment Method";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Payment Method</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditPaymentMethod" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserId" />

                        <div class="mb-3">
                            <label asp-for="CardType" class="form-label fw-bold">Card Type</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-wallet2"></i></span>
                                <select asp-for="CardType" class="form-select">
                                    <option value="Credit Card">Credit Card</option>
                                    <option value="Debit Card">Debit Card</option>
                                </select>
                            </div>
                            <span asp-validation-for="CardType" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CardholderName" class="form-label fw-bold">Cardholder Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="CardholderName" class="form-control" placeholder="Name on card" />
                            </div>
                            <span asp-validation-for="CardholderName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CardNumber" class="form-label fw-bold">Card Number</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-123"></i></span>
                                <input asp-for="CardNumber" class="form-control" placeholder="16-digit card number" maxlength="16" />
                            </div>
                            <span asp-validation-for="CardNumber" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ExpiryDate" class="form-label fw-bold">Expiry Date</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                    <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YYYY" maxlength="7" />
                                </div>
                                <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CVV" class="form-label fw-bold">CVV</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input asp-for="CVV" class="form-control" type="password" placeholder="3-4 digits" maxlength="4" />
                                </div>
                                <span asp-validation-for="CVV" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Update Method
                            </button>
                            <a asp-action="Finance" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
