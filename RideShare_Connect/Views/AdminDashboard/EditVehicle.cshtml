@model RideShare_Connect.ViewModels.EditVehicleViewModel
@{
    ViewData["Title"] = "Edit Vehicle";
}

<h2>Edit Vehicle</h2>

<form asp-action="EditVehicle" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="DriverId" class="form-label"></label>
        <input asp-for="DriverId" class="form-control" />
        <span asp-validation-for="DriverId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CarMaker" class="form-label"></label>
        <input asp-for="CarMaker" class="form-control" />
        <span asp-validation-for="CarMaker" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="VehicleType" class="form-label"></label>
        <input asp-for="VehicleType" class="form-control" />
        <span asp-validation-for="VehicleType" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LicensePlate" class="form-label"></label>
        <input asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="VerificationStatus" class="form-label"></label>
        <input asp-for="VerificationStatus" class="form-control" />
        <span asp-validation-for="VerificationStatus" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Admin" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
