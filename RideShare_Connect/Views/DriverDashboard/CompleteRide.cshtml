@model RideShare_Connect.DTOs.RideBookingDetailsDto
@{
    ViewData["Title"] = "Complete Ride";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Complete Ride - RideShare Connect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>
<body>
    <div class="container py-5">
        <h2 class="mb-4">Complete Ride</h2>
        <div class="card mb-4">
            <div class="card-body">
                <p><strong>Passenger ID:</strong> @Model.PassengerId</p>
                <p><strong>Route:</strong> @Model.Origin <i class="bi bi-arrow-right"></i> @Model.Destination</p>
                <p><strong>Seats:</strong> @Model.BookedSeats</p>
                <p><strong>Pickup:</strong> @Model.PickupLocation</p>
                <p><strong>Drop:</strong> @Model.DropLocation</p>
                <p><strong>Total Fare:</strong> @( (Model.BookedSeats * Model.PricePerSeat * Model.DistanceKm).ToString("C") )</p>
            </div>
        </div>
        <form asp-action="CompleteRide" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.BookingId" />
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="true" id="confirm" name="confirm" required />
                <label class="form-check-label" for="confirm">
                    Ride completed and passenger dropped off
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Complete Ride</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
